<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".review.ReviewHeaderFragment">

    <EditText
        android:id="@+id/txtReviewSearch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtReviewAddInstructor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/search_hint"
        android:background="@drawable/ic_round_edit_text"
        android:paddingVertical="2dp"
        android:paddingStart="05dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:inputType="text"
        android:autofillHints="Faculty" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtReviewSearch"
        app:layout_constraintBottom_toBottomOf="@id/txtReviewSearch"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/ic_search_outline"
        android:contentDescription="@string/search_icon_hint"
        />

    <Button
        android:id="@+id/txtReviewAddInstructor"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/txtReviewSearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/add_button_text"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:textAllCaps="false"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
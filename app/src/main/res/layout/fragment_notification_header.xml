<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".notification.NotificationHeaderFragment">

    <EditText
        android:id="@+id/txtSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/default_text"
        android:textAlignment="center"
        android:background="@drawable/ic_round_edit_text"
        android:inputType="text"
        android:importantForAutofill="no"
        android:paddingHorizontal="30dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@id/txtSearch"
        app:layout_constraintTop_toTopOf="@id/txtSearch"
        app:layout_constraintEnd_toEndOf="@id/txtSearch"
        app:layout_constraintBottom_toBottomOf="@id/txtSearch"
        app:layout_constraintHorizontal_bias="0"
        android:src="@drawable/ic_search_outline"
        android:contentDescription="@string/search_icon_hint"
        android:layout_marginStart="@dimen/default_margin_small"
        android:layout_marginVertical="@dimen/default_margin_small"
        />



</androidx.constraintlayout.widget.ConstraintLayout>